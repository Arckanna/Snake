<Window x:Class="Snake.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Snake"
        mc:Ignorable="d"
        Title="{Binding Title}" SizeToContent="WidthAndHeight" ContentRendered="Window_ContentRendered" Closed="Window_Closed" KeyDown="Window_KeyDown" Focusable="True">
    <Grid>
        <Border BorderBrush="Black" BorderThickness="5">
            <Grid Width="700" Height="400">
                <Canvas Name="GameArea" ClipToBounds="True" Width="700" Height="400" Focusable="False"/>
                <!-- Overlay Game Over : Perdu, score, Rejouer -->
                <Border Background="#CC000000" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsGameOver}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="Perdu" FontSize="36" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,16"/>
                        <TextBlock Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,8">
                            <Run Text="Score : "/>
                            <Run Text="{Binding Score, Mode=OneWay}"/>
                            <Run Text="  Meilleur : "/>
                            <Run Text="{Binding BestScore, Mode=OneWay}"/>
                        </TextBlock>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Content="Rejouer" Command="{Binding RejouerCommand}" Width="140" Height="36" FontSize="14" Cursor="Hand" Margin="0,0,10,0"/>
                            <Button Content="Retour Ã  l'accueil" Command="{Binding RetourAccueilCommand}" Width="140" Height="36" FontSize="14" Cursor="Hand" Margin="10,0,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
