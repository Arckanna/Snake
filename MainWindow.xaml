<Window x:Class="Snake.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Snake"
        xmlns:views="clr-namespace:Snake.Views"
        xmlns:viewModels="clr-namespace:Snake.ViewModels"
        mc:Ignorable="d"
        Title="{Binding Title}"
        Width="700"
        Height="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        ContentRendered="Window_ContentRendered"
        Closed="Window_Closed"
        KeyDown="Window_KeyDown"
        Focusable="True">
    <Grid>
        <ContentControl Content="{Binding}">
            <ContentControl.Style>
                <Style TargetType="ContentControl">
                    <Style.Triggers>
                        <!-- Écran d'accueil -->
                        <DataTrigger Binding="{Binding CurrentState}" Value="{x:Static viewModels:AppState.Home}">
                            <Setter Property="ContentTemplate">
                                <Setter.Value>
                                    <DataTemplate>
                                        <views:HomeView DataContext="{Binding WelcomeViewModel}"/>
                                    </DataTemplate>
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                        
                        <!-- Écran de jeu -->
                        <DataTrigger Binding="{Binding CurrentState}" Value="{x:Static viewModels:AppState.Playing}">
                            <Setter Property="ContentTemplate">
                                <Setter.Value>
                                    <DataTemplate>
                                        <Grid>
                                            <views:GameView DataContext="{Binding GameViewModel}"/>
                                            <views:GameOverView DataContext="{Binding GameViewModel}"
                                                                Visibility="{Binding IsGameOver, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                        </Grid>
                                    </DataTemplate>
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                        
                        <!-- Écran Game Over (overlay sur jeu) -->
                        <DataTrigger Binding="{Binding CurrentState}" Value="{x:Static viewModels:AppState.GameOver}">
                            <Setter Property="ContentTemplate">
                                <Setter.Value>
                                    <DataTemplate>
                                        <Grid>
                                            <views:GameView DataContext="{Binding GameViewModel}"/>
                                            <views:GameOverView DataContext="{Binding GameViewModel}"/>
                                        </Grid>
                                    </DataTemplate>
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ContentControl.Style>
        </ContentControl>
    </Grid>
</Window>
