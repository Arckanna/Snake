<Window x:Class="Snake.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:Snake.Views"
        xmlns:viewModels="clr-namespace:Snake.ViewModels"
        mc:Ignorable="d"
        Title="{Binding Title}"
        Width="700"
        Height="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        ContentRendered="Window_ContentRendered"
        Closed="Window_Closed"
        KeyDown="Window_KeyDown"
        Focusable="True">
    <Grid>
        <!-- Écran d'accueil -->
        <Grid x:Name="WelcomeGrid"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Visibility"
                            Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding CurrentState}"
                                Value="{x:Static viewModels:AppState.Home}">
                            <Setter Property="Visibility"
                                    Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>
            <views:WelcomeView DataContext="{Binding WelcomeViewModel}"/>
        </Grid>

        <!-- Écran de jeu -->
        <Grid x:Name="GameGrid"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Visibility"
                            Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding CurrentState}"
                                Value="{x:Static viewModels:AppState.Playing}">
                            <Setter Property="Visibility"
                                    Value="Visible"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding CurrentState}"
                                Value="{x:Static viewModels:AppState.GameOver}">
                            <Setter Property="Visibility"
                                    Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>
            <views:GameView DataContext="{Binding GameViewModel}"/>
            <views:GameOverView DataContext="{Binding GameViewModel}">
                <views:GameOverView.Style>
                    <Style TargetType="views:GameOverView">
                        <Setter Property="Visibility"
                                Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding DataContext.CurrentState, RelativeSource={RelativeSource AncestorType=Window}}"
                                    Value="{x:Static viewModels:AppState.GameOver}">
                                <Setter Property="Visibility"
                                        Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </views:GameOverView.Style>
            </views:GameOverView>
        </Grid>
    </Grid>
</Window>
