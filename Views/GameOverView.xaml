<UserControl x:Class="Snake.Views.GameOverView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="700">
    <Border Background="#CC000000"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch">
        <StackPanel VerticalAlignment="Center"
                HorizontalAlignment="Center">
            <Border Background="{StaticResource SurfaceColor}"
                    CornerRadius="20"
                    Padding="50,40"
                    HorizontalAlignment="Center"
                    MinWidth="400">
                <Border.Effect>
                    <DropShadowEffect Color="#40000000"
                            Direction="270"
                            ShadowDepth="10"
                            BlurRadius="20"
                            Opacity="0.5"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="ðŸ’€ GAME OVER"
                               FontSize="44"
                               FontWeight="Bold"
                               Foreground="{StaticResource ErrorColor}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,25">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="#E74C3C"
                                    Direction="270"
                                    ShadowDepth="3"
                                    BlurRadius="6"
                                    Opacity="0.6"/>
                        </TextBlock.Effect>
                    </TextBlock>

                    <!-- Scores dans une carte -->
                    <Border Background="{StaticResource BackgroundColor}"
                            CornerRadius="12"
                            Padding="20,15"
                            Margin="0,0,0,25"
                            HorizontalAlignment="Center">
                        <StackPanel>
                            <TextBlock HorizontalAlignment="Center"
                                       FontSize="16"
                                       Style="{StaticResource SubtitleStyle}"
                                       Margin="0,0,0,8">
                                <Run Text="ðŸ“Š Score : "/>
                                <Run Text="{Binding Score, Mode=OneWay}"
                                     FontWeight="Bold"
                                     Foreground="{StaticResource AccentColor}"
                                     FontSize="18"/>
                            </TextBlock>
                            <TextBlock HorizontalAlignment="Center"
                                       FontSize="16"
                                       Style="{StaticResource SubtitleStyle}">
                                <Run Text="ðŸ† Meilleur : "/>
                                <Run Text="{Binding BestScore, Mode=OneWay}"
                                     FontWeight="Bold"
                                     Foreground="{StaticResource SuccessColor}"
                                     FontSize="18"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,10,0,0">
                        <Button Content="ðŸ”„ Rejouer"
                                Command="{Binding RejouerCommand}"
                                Width="160"
                                Height="45"
                                FontSize="15"
                                Margin="0,0,12,0"/>
                        <Button Content="ðŸ  Accueil"
                                Command="{Binding RetourAccueilCommand}"
                                Width="160"
                                Height="45"
                                FontSize="15"
                                Background="{StaticResource SecondaryColor}"
                                Margin="12,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </Border>
</UserControl>
