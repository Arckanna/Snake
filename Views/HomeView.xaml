<UserControl x:Class="Snake.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="700">
    <Grid>
        <!-- Fond avec dÃ©gradÃ© subtil -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0"
                    EndPoint="1,1">
                <GradientStop Color="#F5F2EB"
                        Offset="0"/>
                <GradientStop Color="#E8E5DD"
                        Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <StackPanel VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Margin="50">
            <!-- Logo/Titre avec effet -->
            <Border Background="{StaticResource SurfaceColor}"
                    CornerRadius="20"
                    Padding="30,20"
                    Margin="0,0,0,30"
                    HorizontalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect Color="#40000000"
                            Direction="270"
                            ShadowDepth="5"
                            BlurRadius="10"
                            Opacity="0.2"/>
                </Border.Effect>
                <TextBlock Text="Serpentium"
                           FontSize="56"
                           FontWeight="Bold"
                           HorizontalAlignment="Center">
                    <TextBlock.Foreground>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#4CAF50" Offset="0"/>
                            <GradientStop Color="#2E7D32" Offset="1"/>
                        </LinearGradientBrush>
                    </TextBlock.Foreground>
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#40000000"
                                Direction="270"
                                ShadowDepth="1"
                                BlurRadius="2"
                                Opacity="0.2"/>
                    </TextBlock.Effect>
                </TextBlock>
            </Border>

            <!-- Meilleur score dans une carte -->
            <Border Background="{StaticResource SurfaceColor}"
                    CornerRadius="12"
                    Padding="20,15"
                    Margin="0,0,0,25"
                    HorizontalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect Color="#40000000"
                            Direction="270"
                            ShadowDepth="3"
                            BlurRadius="8"
                            Opacity="0.15"/>
                </Border.Effect>
                <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
                    <TextBlock Text="ðŸ† "
                            FontSize="20"
                            VerticalAlignment="Center"
                            Margin="0,0,8,0"/>
                    <TextBlock VerticalAlignment="Center"
                            FontSize="16"
                            Style="{StaticResource SubtitleStyle}">
                        <Run Text="Meilleur score : "/>
                        <Run Text="{Binding BestScore, Mode=OneWay}"
                             FontWeight="Bold"
                             Foreground="{StaticResource AccentColor}"
                             FontSize="18"/>
                    </TextBlock>
                </StackPanel>
            </Border>

            <!-- Section DifficultÃ© -->
            <Border Background="{StaticResource SurfaceColor}"
                    CornerRadius="12"
                    Padding="25,20"
                    Margin="0,0,0,30"
                    HorizontalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect Color="#40000000"
                            Direction="270"
                            ShadowDepth="3"
                            BlurRadius="8"
                            Opacity="0.15"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="âš™ï¸ DifficultÃ©"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource PrimaryColor}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,15"/>
                    <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center">
                        <RadioButton Content="ðŸ¢ Lent"
                                IsChecked="{Binding IsLent}"
                                GroupName="Difficulty"/>
                        <RadioButton Content="âš¡ Normal"
                                IsChecked="{Binding IsNormal}"
                                GroupName="Difficulty"/>
                        <RadioButton Content="ðŸš€ Rapide"
                                IsChecked="{Binding IsRapide}"
                                GroupName="Difficulty"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Bouton DÃ©marrer avec style amÃ©liorÃ© -->
            <Button Content="â–¶ï¸ DÃ©marrer"
                    Command="{Binding DemarrerCommand}"
                    Width="200"
                    Height="50"
                    FontSize="18"
                    HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>
